<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                    android:startColor="#e4ecf3"
                    android:centerColor="#e4ecf3"
                    android:centerY="0.75"
                    android:endColor="#000000"
                    android:angle="270"
            />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#e4ecf3"
                    android:centerColor="@color/cloblue"
                    android:centerY="0.75"
                    android:endColor="@color/cloblue"
                    android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>